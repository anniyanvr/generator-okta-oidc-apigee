<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="change-context">
            <Description/>
            <Request>
                <Step>
                    <Name>ValidateAccessToken</Name>
                </Step>
                <Step>
                    <Name>ExtractIdP</Name>
                </Step>
                <Step>
                    <Name>SetCacheValue</Name>
                </Step>
                <Step>
                    <Condition>apigee.access_token != null</Condition>
                    <Name>PopulateCachestateToken</Name>
                </Step>
            </Request>
            <Response>
                <Step>
                    <Name>ReturnStateToken</Name>
                </Step>
            </Response>
            <Condition>(request.verb = "POST") and (proxy.pathsuffix MatchesPath "/change-context")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/api</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="noroute"/>
</ProxyEndpoint>